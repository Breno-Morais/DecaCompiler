    float _power(float indice, int exposant){
        int compteur;
        float produit;
        if(exposant == 0){
            return 1.0;
        }
        if(exposant > 0){
            compteur = 1;
            produit = indice;
            while(compteur < exposant){
                produit = produit * indice;
                compteur = compteur + 1;
            }
        }
        else{
            compteur = -1;
            produit = 1 / indice;
            while(compteur > exposant){
                produit = produit / indice;
                compteur = compteur - 1;
            }
        }
        return produit;
    }


